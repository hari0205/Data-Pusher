{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["./src/types/express", "./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/db"],
  "exclude": ["node_modules", "**/*.test.ts", "dist/**/*.js"]
}
